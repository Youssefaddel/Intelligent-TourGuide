<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.modernacademy.Itourguide.qrscanner.Activity.LaunchScreenActivity">

    <ImageView
        android:src="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <ImageView
        android:src="@drawable/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />

    <com.modernacademy.Itourguide.qrscanner.CustomWidgets.CustomTextView
        android:text="&#169; Modern Academy For Computer Science"
        android:textColor="@color/orange"
        android:textStyle="normal"
        android:textSize="15sp"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
